@using Microsoft.AspNetCore.Mvc.Localization
@using NasladdinPlace.UI.Helpers
@using NasladdinPlace.UI.ViewModels.Users
@using NasladdinPlace.UI.ViewModels.Base
@model UniReferenceViewModel<BaseViewModel>

@inject IViewLocalizer Localizer

@{
    var saveButton = Localizer["Save"].Value;
    var cancel = Localizer["Cancel"].Value;
    var formRenderer = new FormRendererHelper<ChangeUserPasswordViewModel>();
}
<div class="modal" id="change-user-password-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4>@Localizer["Change password"].Value</h4>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label class="col-lg-12">@Localizer["Email"].Value</label>
                    <div class="col-lg-12">
                        <label name="Email" data-bind="text: Email" disabled="disabled"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-12">@Localizer["New password"].Value</label>
                    <div class="col-lg-12">@await Html.RenderControlAsync(formRenderer.Get(f => f.NewPassword))</div>
                </div>
                <div class="form-group row">
                    <label class="col-lg-12">@Localizer["New password confirmation"].Value</label>
                    <div class="col-lg-12">@await Html.RenderControlAsync(formRenderer.Get(f => f.NewPasswordConfirmation))</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">@cancel</button>
                <button type="button" class="btn btn-primary" id="submit" data-bind="click: changeUserPassword">@saveButton</button>
            </div>
        </div>
    </div>
</div>