@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Catalog"].Value;
}

<div class="row row-eq-height wrapper border-bottom white-bg p-xs">
    <div class="col-xs-6 col-sm-8 custom-breadcrumb">
        <ol class="breadcrumb">
            <li class="hidden-xs">
                <a href="@Url.Action("All", "PointsOfSale")">@Localizer["Home"].Value</a>
            </li>
            <li class="active">
                <strong>@ViewData["Title"]</strong>
            </li>
        </ol>
    </div>
    <div class="col-xs-3 col-sm-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content" id="react-root">
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <link href="~/js/CatalogPage/bundle.css" rel="stylesheet" />
    <script src="~/js/CatalogPage/lib/react.min.js"></script>
    <script src="~/js/CatalogPage/lib/react-dom.min.js"></script>
    <script src="~/js/CatalogPage/lib/react-bootstrap.min.js"></script>
    <script src="~/js/CatalogPage/bundle.js"></script>

}

