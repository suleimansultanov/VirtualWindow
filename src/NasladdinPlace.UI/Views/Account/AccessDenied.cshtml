@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "AccessDenied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="reference-common">
    <div class="row row-eq-height wrapper border-bottom white-bg p-xs">
        <div class="col-xs-6 col-sm-8 col-md-12 custom-breadcrumb">
            <ol class="breadcrumb">
                <li class="hidden-xs">
                    <a href="/">@Localizer["Home"].Value</a>
                </li>
            </ol>
        </div>
    </div>
    <div class="wrapper wrapper-content fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-content" id="reference-list">
                        <div class="sk-spinner sk-spinner-double-bounce">
                            <div class="sk-double-bounce1"></div>
                            <div class="sk-double-bounce2"></div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-2 text-center">
                                            <p><em class="fa fa-exclamation-triangle fa-5x"></em><br />@Localizer["Forbidden"].Value</p>
                                        </div>
                                        <div class="col-md-10">
                                            <h3>@Localizer["Access denied"].Value</h3>
                                            <p>@Html.Raw(@Localizer["Access denied description"].Value)</p>
                                            <a class="btn btn-primary" href="javascript:history.back()">@Localizer["Back"].Value</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
