@using Microsoft.AspNetCore.Mvc.Localization
@model NasladdinPlace.UI.ViewModels.Goods.BuyGoodViewModel

@inject IViewLocalizer Localizer

@{
    Layout = null;
    var defaultValueForPfcc = 0;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <title>Description</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/views/buyGood/style.css" asp-append-version="true" />
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery">
    </script>
</head>
<body>
        <div class="row">
            <div class="col-md-12 p-r-0 text-center">
                <div class="row image-block">
                    <img class="image-full img-responsive center-block" alt="good image" src="@Model.ImagePath">
                    <h3 class="lead"><strong>@Model.Category</strong></h3>
                </div>
                <div class="col-xs-12 bg-green-transparent">
                    <h1 class="pull-left white-color">
                        <strong>@Model.Name</strong>
                    </h1>
                </div>
                <br />

                <div class="container-fluid">
                    <div class="col-xs-12 inline">
                        <div class="col-xs-4 p-l-0">
                            <h2 class="pull-left p-l-0"><strong>@Model.Price @Localizer["Currency"].Value</strong></h2>
                        </div>
                        <div class="col-xs-8 p-l-0">
                            <h2 class="pull-left p-l-0 gray-text"><strong>@Model.NetWeight @Localizer["Weight"].Value</strong></h2>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-3">
                            <div class="col-xs-12 vertical-align-div bg-green">
                                @if (Model.CaloriesInKcal != null)
                                {
                                    <h2 class="white-color"><strong>@Model.CaloriesInKcal</strong></h2>
                                }
                                else
                                {
                                    <h2 class="white-color"><strong>@defaultValueForPfcc</strong></h2>
                                }
                            </div>
                            <h3 class="lead">@Localizer["Calories"].Value</h3>
                        </div>
                        <div class="col-xs-3">
                            <div class="col-xs-12 vertical-align-div bg-purple">
                                @if (Model.ProteinsInGrams != null)
                                {
                                    <h2 class="white-color"><strong>@Model.ProteinsInGrams</strong></h2>
                                }
                                else
                                {
                                    <h2 class="white-color"><strong>@defaultValueForPfcc</strong></h2>
                                }
                            </div>
                            <h3 class="lead">@Localizer["Proteins"].Value</h3>
                        </div>
                        <div class="col-xs-3">
                            <div class="col-xs-12 vertical-align-div bg-red">
                                @if (Model.FatsInGrams != null)
                                {
                                    <h2 class="white-color"><strong>@Model.FatsInGrams</strong></h2>
                                }
                                else
                                {
                                    <h2 class="white-color"><strong>@defaultValueForPfcc</strong></h2>
                                }
                            </div>
                            <h3 class="lead">@Localizer["Fats"].Value</h3>
                        </div>
                        <div class="col-xs-3">
                            <div class="col-xs-12 vertical-align-div bg-orange">
                                @if (Model.CarbohydratesInGrams != null)
                                {
                                    <h2 class="white-color"><strong>@Model.CarbohydratesInGrams</strong></h2>
                                }
                                else
                                {
                                    <h2 class="white-color"><strong>@defaultValueForPfcc</strong></h2>
                                }
                            </div>
                            <h3 class="lead">@Localizer["Carbohydrates"].Value</h3>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-12">
                            <h1 class="pull-left green-text">
                                @Localizer["Description"].Value
                            </h1>
                        </div>
                        <div class="col-xs-12">
                            <div class="text-left">
                                <h3>@Model.Description</h3>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <h1 class="pull-left green-text">
                                @Localizer["Composition"].Value
                            </h1>
                        </div>
                        <div class="col-xs-12">
                            <div class="text-left">
                                <h3>@Model.Composition</h3>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <h1 class="pull-left green-text">
                                @Localizer["Maker"].Value
                            </h1>
                        </div>
                        <div class="col-xs-12">
                            <div class="text-left">
                                <h3>@Model.Maker</h3>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <div class="col-md-12">

                        <a href="https://itunes.apple.com/app/id1247762108" target="_blank" class="btn"
                           rel="noopener noreferrer">
                            <img class="appstore-logo" alt="app store" src="https://developer.apple.com/app-store/marketing/guidelines/images/badge-example-preferred_2x.png">
                        </a>
                        <a href="https://play.google.com/store/apps/details?id=net.timelysoft.nasladdin" target="_blank" class="btn"
                           rel="noopener noreferrer">
                            <img class="play-logo" alt="app store" src="https://play.google.com/intl/en_us/badges/static/images/badges/ru_badge_web_generic.png">
                        </a>
                    </div>
                </div>
            </div>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal">
    </script>
</body>
</html>