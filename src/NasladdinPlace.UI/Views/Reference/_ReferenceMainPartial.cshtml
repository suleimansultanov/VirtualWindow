@using NasladdinPlace.UI.ViewModels.Base
@model UniReferenceViewModel<BaseViewModel>

<div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content" id="reference-list">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Configuration?.BeforeGridPartialName))
                    {
                        <partial name="@Model.Configuration.BeforeGridPartialName" model="@Model" />
                    }

                    @if (Model.IsRenderFilter && (Model.Configuration == null || (Model.Configuration?.IsRenderFilter == true && Model.Configuration?.IsRenderModalFilter == true)))
                    {
                        <partial name="~/Views/Reference/_ReferenceModalFilter.cshtml" model="@Model" />
                    }

                    <partial name="~/Views/Reference/_ReferenceButtons.cshtml" model="@Model" />

                    <partial name="~/Views/Reference/_ReferenceGrid.cshtml" model="@Model" />
                </div>
            </div>
        </div>
    </div>
</div>
