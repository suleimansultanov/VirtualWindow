@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@model NasladdinPlace.UI.ViewModels.LabeledGoods.LabeledGoodsToGoodFormViewModel
@{
    ViewData["Title"] = Localizer["Identification of Goods"].Value;
}

<div class="row row-eq-height wrapper border-bottom white-bg p-sm">
    <div class="col-xs-9 col-sm-10">
        <ol class="breadcrumb">
            <li class="hidden-xs">
                <a href="@Url.Action("All", "PointsOfSale")">@Localizer["Home"].Value</a>
            </li>
            <li class="active">
                <strong>@ViewData["Title"]</strong>
            </li>
        </ol>
    </div>
    <div class="col-xs-3 col-sm-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="ibox-tools">
                        <div class="m-b-sm">
                            <select onchange="window.location.href = this.options[this.selectedIndex].value" class="form-control">
                                @foreach (var pos in @Model.PosSelectList)
                                {
                                    <!option value="@Url.Action("Identify", "LabeledGoods", new {PosId = pos.Value})" @(Convert.ToInt32(pos.Value) == Model.PosId ? "selected" : "")>@Localizer[pos.Text].Value</!option>
                                }
                            </select>
                        </div>
                    </div>
                    <div id="app"></div>
                </div>
            </div>
        </div>
    </div>
</div>