@inject IViewLocalizer Localizer
@using Microsoft.AspNetCore.Mvc.Localization
@using NasladdinPlace.CheckOnline.Builders.CheckOnline.Enums
@using NasladdinPlace.Core.Enums
@using NasladdinPlace.UI.Helpers
@using NasladdinPlace.UI.ViewModels.Fiscalization
@using NasladdinPlace.Utilities.EnumHelpers

@{
    var formRenderer = new FormRendererHelper<FiscalizationInfoViewModel>();

    var cancel = Localizer["Cancel"].Value;

    var requestDateTimeDisplayName = formRenderer.Get(f => f.RequestDateTime).DisplayName;
    var responseDateTimeDisplayName = formRenderer.Get(f => f.ResponseDateTime).DisplayName;
    var requestIdDisplayName = formRenderer.Get(f => f.RequestId).DisplayName;
    var documentInfoDisplayName = formRenderer.Get(f => f.DocumentInfo).DisplayName;
    var fiscalizationNumber = formRenderer.Get(f => f.FiscalizationNumber).DisplayName;
    var fiscalizationSerial = formRenderer.Get(f => f.FiscalizationSerial).DisplayName;
    var fiscalizationSign = formRenderer.Get(f => f.FiscalizationSign).DisplayName;
    var fiscalizationState = formRenderer.Get(f => f.State).DisplayName;
    var fiscalizationType = formRenderer.Get(f => f.Type).DisplayName;
    var correctionAmountDisplayName = formRenderer.Get(f => f.CorrectionAmount).DisplayName;
    var errorInfoDisplayName = formRenderer.Get(f => f.ErrorInfo).DisplayName;
}
<script type="text/html" id="fiscalizationInfos-template">
    <div class="modal" id="fiscalization-info-modal" tabindex="-1" role="dialog" aria-hidden="true" data-bind="with: $root.FiscalizationDetails">
        <div class="modal-dialog">
            <div class="modal-content animated fadeIn">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4>@Localizer["FiscalizationInfoTitle"].Value</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group row">
                        <div class="panel" data-bind="css: {'panel-danger':  state === @((int)FiscalizationState.PendingError),
                                                        'panel-success':  state === @((int)FiscalizationState.Success),
                                                        'panel-warning':  state === @((int)FiscalizationState.Pending) || state === @((int)FiscalizationState.InProcess)}">
                            <div class="panel-heading" data-bind="text: $root.GetTitle(type, state)"></div>
                            <div class="panel-body">
                                <div data-bind="visible: state === @((int)FiscalizationState.PendingError)">
                                    <div class="form-group row">
                                        <label class="col-lg-12">@requestDateTimeDisplayName</label>
                                        <div class="col-lg-12"><span data-bind="date:requestDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@errorInfoDisplayName</label>
                                        <div class="col-lg-12"><span data-bind="text:errorInfo"></span></div>
                                    </div>
                                </div>

                                <div data-bind="visible: state === @((int)FiscalizationState.Pending) || state === @((int)FiscalizationState.InProcess)">
                                    <div class="form-group row">
                                        <label class="col-lg-12">@requestDateTimeDisplayName</label>
                                        <div class="col-lg-12"><span data-bind="date:requestDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@requestIdDisplayName</label>
                                        <div class="col-lg-12"><span data-bind="text:requestId"></span></div>
                                    </div>
                                </div>

                                <div data-bind="visible: state === @((int)FiscalizationState.Success) && (type === @((int)FiscalizationType.Income)
                                                                                                            || type === @((int)FiscalizationType.IncomeRefund) )">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group row">
                                                <label class="col-lg-12">@requestDateTimeDisplayName</label>
                                                <div class="col-lg-12"><span data-bind="date:requestDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group row">
                                                <label class="col-lg-12">@responseDateTimeDisplayName</label>
                                                <div class="col-lg-12"><span data-bind="date:responseDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@documentInfoDisplayName</label>
                                        <div class="col-lg-12"><span class="custom-check" data-bind="html: documentInfo != null ? documentInfo.replaceAll('\n', '<br/>') : ''"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <div id="fiscalization-qr-code" style="width: 50%; margin-left: 20px;"></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@fiscalizationNumber</label>
                                        <div class="col-lg-12"><span data-bind="text: fiscalizationNumber"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@fiscalizationSerial</label>
                                        <div class="col-lg-12"><span data-bind="text: fiscalizationSerial"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@fiscalizationSign</label>
                                        <div class="col-lg-12"><span data-bind="text: fiscalizationSign"></span></div>
                                    </div>
                                </div>

                                <div data-bind="visible: state === @((int) FiscalizationState.Success) && type === @((int)FiscalizationType.Correction)">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group row">
                                                <label class="col-lg-12">@requestDateTimeDisplayName</label>
                                                <div class="col-lg-12"><span data-bind="date:requestDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group row">
                                                <label class="col-lg-12">@responseDateTimeDisplayName</label>
                                                <div class="col-lg-12"><span data-bind="date:responseDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@correctionAmountDisplayName</label>
                                        <div class="col-lg-12"><span data-bind="numeric: correctionAmount, decimalPlaces: 2"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@documentInfoDisplayName</label>
                                        <div class="col-lg-12"><span class="custom-check" data-bind="html: documentInfo != null ? documentInfo.replaceAll('\n', '<br/>') : ''"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@fiscalizationNumber</label>
                                        <div class="col-lg-12"><span data-bind="text: fiscalizationNumber"></span></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-lg-12">@fiscalizationSerial</label>
                                        <div class="col-lg-12"><span data-bind="text: fiscalizationSerial"></span></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-white" data-dismiss="modal">@cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>@Localizer["FiscalizationInfoTitle"].Value</h5>
        </div>
        <div class="ibox-content">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="transaction-history-table" style="margin-bottom: 0px;">
                    <thead>
                        <tr>
                            <th class="text-left">@fiscalizationType</th>
                            <th class="text-left">@requestDateTimeDisplayName</th>
                            <th class="text-left">@responseDateTimeDisplayName</th>
                            <th class="text-left">@fiscalizationState</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- ko if : $data.length == 0 -->
                        <tr class="text-center">
                            <td colspan="5">@Localizer["No records"].Value</td>
                        </tr>
                        <!-- /ko -->
                        <!-- ko foreach: $data -->
                        <tr>
                            <td><span data-bind="text: $root.GetTypeName(type)"></span></td>
                            <td><span data-bind="date: requestDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></td>
                            <td><span data-bind="date: responseDateTime, dateFormat: 'DD.MM.YYYY HH:mm:ss'"></span></td>
                            <td><span data-bind="text: $root.GetStateName(state)"></span></td>
                            <td>
                                <a class="btn-link btn-link-custom" data-bind="click: $root.fiscalizationInfo">
                                    <span><em class="glyphicon glyphicon-open-file"> </em> @Localizer["More"].Value</span>
                                </a>
                            </td>
                        </tr>
                        <!-- /ko -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</script>

@(await Html.PartialAsync("_FiscalizationQrCodeRendererScripts"))
<script>
    window.getFiscalizationChecksHandler = function() {
        return new FiscalizationChecksHandler(
            vm => {
                const modalId = "#fiscalization-info-modal";

                vm.FiscalizationDetails = ko.observable();

                vm.GetTitle = function (type, state) {
                    return vm.GetTypeName(type) + ' ' + vm.GetStateName(state).toLowerCase();
                };

                vm.GetTypeName = function (type) {
                    if (type === @((int) FiscalizationType.Income))
                        return '@Html.Raw(@Localizer[nameof(FiscalizationType.Income)].Value)';
                    if (type === @((int)FiscalizationType.IncomeRefund))
                        return '@Html.Raw(@Localizer[nameof(FiscalizationType.IncomeRefund)].Value)';
                    if (type === @((int)FiscalizationType.Correction))
                        return '@Html.Raw(@Localizer[nameof(FiscalizationType.Correction)].Value)';

                    return '';
                };

                vm.GetStateName = function (state) {
                    if (state === @((int) FiscalizationState.Success))
                        return '@Html.Raw(FiscalizationState.Success.GetDisplayName())';
                    if (state === @((int) FiscalizationState.Pending))
                        return '@Html.Raw(FiscalizationState.Pending.GetDisplayName())';
                    if (state === @((int) FiscalizationState.PendingError))
                        return '@Html.Raw(FiscalizationState.PendingError.GetDisplayName())';
                    if (state === @((int) FiscalizationState.Error))
                        return '@Html.Raw(FiscalizationState.Error.GetDisplayName())';
                    if (state === @((int) FiscalizationState.InProcess))
                        return '@Html.Raw(FiscalizationState.InProcess.GetDisplayName())';

                    return '';
                };

                vm.fiscalizationInfo = function (item) {
                    vm.FiscalizationDetails(item);
                    $(modalId).modal('show');
                    
                    FiscalizationQrCodeRenderer.render("fiscalization-qr-code", item);
                }
            });
    };
</script>
